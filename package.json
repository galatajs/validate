{
  "name": "@istanbul/validate",
  "version": "0.0.1",
  "description": "Validation packages of istanbul framework",
  "homepage": "https://github.com/istanbulnode/validate#readme",
  "keywords": [
    "typescript",
    "istanbul",
    "validation",
    "i18n"
  ],
  "author": "Sami Salih İBRAHİMBAŞ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/istanbulnode/validate.git"
  },
  "bugs": {
    "url": "https://github.com/istanbulnode/validate/issues"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --watchAll --no-cache",
    "clear": "del-cli ./dist/*",
    "build": "npm run clear && tsc"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1",
      "~/(.*)": "<rootDir>/$1"
    }
  }
}
